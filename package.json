{
  "name": "grow-crm-backend",
  "version": "1.0.0",
  "description": "Express|MongoDB backend for Grow CRM",
  "main": "./build/server.js",
  "scripts": {
    "start": "yarn build && yarn serve",
    "serve": "node -r dotenv/config build/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext .ts src",
    "build": "yarn clean && yarn build-ts",
    "build-ts": "tsc",
    "clean": "rimraf ./build",
    "watch-node": "nodemon -r dotenv/config build/server.js",
    "watch-ts": "tsc -w"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "express": "^4.17.1",
    "formidable": "^1.2.2",
    "mongoose": "^6.0.7",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/formidable": "^1.2.4",
    "@types/hapi__joi": "^17.1.7",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "concurrently": "^6.2.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
